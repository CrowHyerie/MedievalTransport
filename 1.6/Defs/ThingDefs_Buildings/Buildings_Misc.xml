<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--========================== Airship Shuttle ============================-->
	<ThingDef ParentName="BuildingBase">
		<defName>Crows_AirshipShuttle</defName>
		<label>airship shuttle</label>
		<description>A chemfuel-powered airship designed for long-distance travel.</description>
		<thingClass>Building_PassengerShuttle</thingClass>
		<preventDroppingThingsOn>true</preventDroppingThingsOn>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>50</pathCost>
		<blockWind>true</blockWind>
		<passability>PassThroughOnly</passability>
		<fillPercent>1.0</fillPercent>
		<size>(6,4)</size>
		<drawHighlight>true</drawHighlight>
		<highlightColor>(0.56, 0.62, 0.9)</highlightColor>
		<uiIconScale>1</uiIconScale>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Vehicle/Airship</texPath>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(8,4)</drawSize>
			<shadowData>
				<volume>(4.1, 1.0, 1.8)</volume>
				<offset>(0, 0, -0.1)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>600</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<WorkToBuild>36000</WorkToBuild>
			<Mass>125</Mass>
			<Comfort>0.65</Comfort>
		</statBases>
		<tickerType>Normal</tickerType>
		<designationCategory>Odyssey</designationCategory>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<costList>
			<ComponentIndustrial>5</ComponentIndustrial>
			<WoodLog>550</WoodLog>
			<Steel>450</Steel>
		</costList>
		<canOverlapZones>true</canOverlapZones>
		<killedLeavings>
			<WoodLog>350</WoodLog>
			<Steel>250</Steel>
		</killedLeavings>
		<rotatable>true</rotatable>
		<hasInteractionCell>true</hasInteractionCell>
		<interactionCellOffset>(0,0,-2)</interactionCellOffset>
		<defaultPlacingRot>North</defaultPlacingRot>
		<selectable>true</selectable>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
		<drawerType>RealtimeOnly</drawerType>
		<repairEffect>Repair</repairEffect>
		<forceDebugSpawnable>true</forceDebugSpawnable>
		<building>
			<claimable>false</claimable>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
			<paintable>true</paintable>
			<isInert>true</isInert>
		</building>
		<inspectorTabs>
			<li>ITab_ContentsTransporter</li>
		</inspectorTabs>
		<researchPrerequisites>
			<li>Crows_AirshipShuttleResearch</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Shuttle">
				<shipDef>Crows_Ship_AirshipShuttle</shipDef>
			</li>
			<li Class="CompProperties_Launchable">
				<fuelPerTile>3</fuelPerTile>
				<minFuelCost>50</minFuelCost>
				<skyfallerLeaving>Crows_AirshipShuttleLeaving</skyfallerLeaving>
				<worldObjectDef>Crows_AirshipShuttleObject</worldObjectDef>
				<cooldownTicks>3750</cooldownTicks>
				<!-- 1.5 hours -->
				<fixedLaunchDistanceMax>40</fixedLaunchDistanceMax>
				<cooldownEndedMessage>{0} is ready to launch again.</cooldownEndedMessage>
			</li>
			<li Class="CompProperties_Transporter">
				<massCapacity>500</massCapacity>
				<max1PerGroup>true</max1PerGroup>
				<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
				<pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
				<pawnExitSound>Shuttle_PawnExit</pawnExitSound>
				<showMassInInspectString>true</showMassInInspectString>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelCapacity>400</fuelCapacity>
				<targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
				<initialConfigurableTargetFuelLevel>400</initialConfigurableTargetFuelLevel>
				<fuelFilter>
					<thingDefs>
						<li>Chemfuel</li>
						<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_Tar</li>
						<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_Coal</li>
					</thingDefs>
				</fuelFilter>
				<fuelLabel>Chemfuel</fuelLabel>
				<fuelGizmoLabel>Chemfuel</fuelGizmoLabel>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<autoRefuelPercent>1</autoRefuelPercent>
				<showFuelGizmo>true</showFuelGizmo>
				<drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<canEjectFuel>true</canEjectFuel>
			</li>
			<li Class="CompProperties_AmbientSound">
				<sound>ShuttleIdle_Ambience</sound>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<uiOrder>2600</uiOrder>
	</ThingDef>

	<TransportShipDef>
		<defName>Crows_Ship_AirshipShuttle</defName>
		<label>airship shuttle</label>
		<shipThing>Crows_AirshipShuttle</shipThing>
		<arrivingSkyfaller>Crows_AirshipShuttleIncoming</arrivingSkyfaller>
		<leavingSkyfaller>Crows_AirshipShuttleLeaving</leavingSkyfaller>
		<worldObject>Crows_AirshipShuttleObject</worldObject>
		<playerShuttle>true</playerShuttle>
	</TransportShipDef>

	<!--========================== Transport Pod ============================-->

	<ThingDef ParentName="BuildingBase">
		<defName>Crows_MedPodLauncher</defName>
		<label>medieval pod launcher</label>
		<description>A fueling port for launching one medieval transport pod. Pod launchers can launch as a group - but the launchers must be placed adjacent to each other.</description>
		<graphicData>
			<texPath>Things/Special/MediPodLauncher</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,3)</drawSize>
		</graphicData>
		<drawerType>MapMeshAndRealTime</drawerType>
		<size>(1,2)</size>
		<rotatable>true</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1.0</fillPercent>
		<designationCategory>Misc</designationCategory>
		<uiOrder>2200</uiOrder>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<building>
			<hasFuelingPort>true</hasFuelingPort>
		</building>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>3000</WorkToBuild>
			<Flammability>0.9</Flammability>
		</statBases>
		<costList>
			<WoodLog>150</WoodLog>
			<Steel>50</Steel>
		</costList>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelCapacity>80.0</fuelCapacity>
				<targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
				<initialConfigurableTargetFuelLevel>80</initialConfigurableTargetFuelLevel>
				<fuelFilter>
					<thingDefs>
						<li>Chemfuel</li>
						<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_Tar</li>
						<li MayRequire="DankPyon.Medieval.Overhaul">DankPyon_Coal</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<autoRefuelPercent>1</autoRefuelPercent>
				<showFuelGizmo>true</showFuelGizmo>
				<drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
				<drawFuelGaugeInMap>true</drawFuelGaugeInMap>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<canEjectFuel>true</canEjectFuel>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_FuelingPort</li>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<researchPrerequisites>
			<li>Crows_MedievalPodResearch</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<uiIconScale>0.9</uiIconScale>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>Crows_MedTransportPod</defName>
		<label>medieval transport pod</label>
		<description>A launchable wooden cargo pod capable of carrying people, items, or animals. Can be used for sending gifts, transporting people or supplies, surprise attacks, or reinforcing battles.</description>
		<graphicData>
			<texPath>Things/Special/MediDropPod</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<size>(1,1)</size>
		<rotatable>false</rotatable>
		<tickerType>Normal</tickerType>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<designationHotKey>Misc12</designationHotKey>
		<fillPercent>0.5</fillPercent>
		<designationCategory>Misc</designationCategory>
		<uiOrder>2200</uiOrder>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>1600</WorkToBuild>
			<Flammability>0.5</Flammability>
		</statBases>
		<costList>
			<Steel>20</Steel>
			<WoodLog>50</WoodLog>
		</costList>
		<comps>
			<li Class="CompProperties_Transporter">
				<restEffectiveness>0.8</restEffectiveness>
				<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
			</li>
			<li Class="CompProperties_Launchable_TransportPod">
				<skyfallerLeaving>Crows_MediDropPodLeaving</skyfallerLeaving>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_ContentsTransporter</li>
		</inspectorTabs>
		<placeWorkers>
			<li>PlaceWorker_NeedsFuelingPort</li>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>Crows_MedievalPodResearch</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<uiIconScale>0.65</uiIconScale>
	</ThingDef>
</Defs>